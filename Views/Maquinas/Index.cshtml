@model IEnumerable<ServicosTecnicos.Models.Maquina>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.modelo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.modelo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.patrimonio">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.patrimonio">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.patrimonio">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
